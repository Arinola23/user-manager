<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/">Home</a></li>
    <li class="breadcrumb-item active" aria-current="page">Edit Details</li>
  </ol>
</nav>

{{#if alert}}
<div class="alert alert-success alert-dismissible fade show d-flex align-items-center justify-content-between" role="alert">
    <span>{{alert}} <a href="/" class="alert-link ms-2">Go to home page</a></span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

 {{#each rows}}
<form id="userForm" class="row" method="POST" action="/edituser/{{this.id}}">
    {{!-- {{> user-form}} this won't be used because of the value in the edit-user file form is different from the value in the add-user file --}} 
      <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="firstNameInput" placeholder="First name" name="firstName" required minlength="2" value="{{this.firstName}}">
      <label for="firstNameInput">First Name</label>
      <div class="invalid-feedback">Please enter a valid first name (at least 2 characters).</div>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="text" class="form-control" id="lastNameInput" placeholder="Last name" name="lastName" required minlength="2" value="{{this.lastName}}">
      <label for="lastNameInput">Last Name</label>
      <div class="invalid-feedback">Please enter a valid last name (at least 2 characters).</div>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="email" class="form-control" id="emailInput" placeholder="user@email.com" name="email" required value="{{this.email}}">
      <label for="emailInput"> Email </label>
      <div class="invalid-feedback">Please enter a valid email address.</div>
    </div>
  </div>

  <div class="col-6">
    <div class="form-floating mb-3">
      <input type="tel" class="form-control" id="phoneInput" placeholder="Enter phone number" name="phone" pattern="^\+?[0-9]{1,4}[\s\-]?\(?[0-9]{1,3}\)?[\s\-]?[0-9]{1,4}[\s\-]?[0-9]{1,4}$" title="Enter a valid phone number" required value="{{this.phone}}">
      <label for="phoneInput">Phone Number</label>
      <div class="invalid-feedback">Please enter a valid phone number.</div>
    </div>
  </div>

  <div class="col-12">
    <div class="form-floating mb-3">
      <textarea class="form-control" placeholder="Leave a comment here" name="comments" id="comments" style="height: 200px" minlength="10" required>{{this.comments}}</textarea>
      <label for="comments">Comment</label>
      <div class="invalid-feedback">Please leave a comment (at least 10 characters).</div>
    </div>
  </div>

  <div class="col-12 d-grid">
    <button class="btn btn-primary" type="submit">Submit</button>
    {{!-- <a href="/" class="btn btn-primary">Submit</a> --}}
    {{!-- <a href="/" class="btn btn-primary">Submit</a>   routes to the home page --}}
  </div>
</form>
{{/each}}

