    {{#if removedUser}}
          <div class="alert alert-success alert-dismissible fade show" role="alert">
                <p>user has been removed</p>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    {{/if}}

    <div class="row">
      <div class="col-6"><h1> User</h1></div>
      <div class="col-6 d-flex justify-content-center">
        <a href="/adduser" class="btn btn-primary align-self-center">Add Details</a>
      </div>
    </div>

    <table class="table table-bordered">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>
  <tbody>
    {{!-- loop --}}
      {{#each rows}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.firstName}}</td>
      <td>{{this.lastName}}</td>
      <td>{{this.email}}</td>
      <td>{{this.phone}}</td>
      <td class="text-center  ">
        <a href="/viewOneUser/{{this.id}}" type="button" class="btn btn-light btn-small mx-2"><i class="bi bi-eye"></i>View</a>
        <a href='/edituser/{{this.id}}'  type="button" class="btn btn-light btn-small mx-2 "><i class="bi bi-pencil"></i>Edit</a>
        <a href="/deleteuser/{{this.id}}" type="button" class="btn btn-light btn-small mx-2"><i class="bi bi-person-x"></i>Delete</a>
       </td>
    </tr>
  {{/each}}
  </tbody>
</table>
</body>
</html>